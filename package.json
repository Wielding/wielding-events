  "devDependencies": {
    "@types/jest": "^23.3.12",
    "jest": "^23.6.0",
    "jest-localstorage-mock": "^2.4.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  }
